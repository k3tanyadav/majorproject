<div class="post-div" id="post-<%= post.id %>">
    <% if(locals.user && post.user.id == locals.user.id){ %>
        <a class="delete-post" href="/posts/destroy/<%= post.id %>">delete</a>
    <% } %>
    <p> <%= post.content %> <br> <small> <%= post.user.name %> </small> </p>
    <form action="/comments/create" method="post">
        <input type="text" name="content">
        <input type="hidden" name="post" value="<%= post._id %>">
        <button type="submit">comment</button>
    </form>

    <div class="comment-div" id="<%= post._id %>">  
        <% for(comment of post.comments){ %>
            <%- include('_comment'); %> 
        <% } %>
    </div>
</div>